<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/khoantc_item"
    app:cardCornerRadius="10dp"
    android:elevation="5dp"
    android:padding="8dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        >
        <TextView
            android:id="@+id/tvTieuDe"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Tiêu để chi tiêu"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/tvNgay"
            android:textColor="@android:color/white"
            android:layout_below="@+id/tvTieuDe"
            android:layout_alignParentLeft="true"
            android:text="Ngày chi tiêu"
            android:gravity="left|center_vertical"
            android:layout_margin="8dp"
            />
        <TextView
            android:id="@+id/tvTien"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/tvNgay"
            android:textColor="@android:color/white"
            android:layout_alignParentLeft="true"
            android:text="Tiền"
            android:gravity="left|center_vertical"
            android:layout_margin="8dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/ktcSeparate"
            android:layout_below="@+id/tvTien"
            android:layout_margin="8dp"
            android:textColor="#123123"
            />
        <ImageView
            android:id="@+id/btnEditKTC"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@+id/ktcSeparate"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_edit_black_24dp"
            android:layout_margin="8dp"
            />
        <ImageView
            android:id="@+id/btnDelKTC"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@+id/ktcSeparate"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_delete_black_24dp"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>